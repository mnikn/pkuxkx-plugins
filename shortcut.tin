		#delay 3 {ju;};
	};
	#action {你至少要把} {
		get shi suo;
		ju;
	};
	get shi suo;
	ju;
}
#alias remove-auto-ju {
	#unaction {你缓缓举起};
	#unaction {你至少要把};
}
